<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.prat4orm.PoderesClass" table="poderes" schema="practica4_orm">
        <id name="heroeId">
            <column name="HeroeId" sql-type="int"/>
        </id>
        <property name="nombre">
            <column name="Nombre" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="descripcion">
            <column name="Descripcion" sql-type="varchar(255)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>